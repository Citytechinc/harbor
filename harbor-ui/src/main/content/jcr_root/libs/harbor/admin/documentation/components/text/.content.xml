<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            jcr:mixinTypes="[sling:VanityPath]"
            jcr:primaryType="nt:unstructured"
            jcr:title="Harbor Text Component"
            jcr:subtitle="Group: Harbor"
            jcr:description="Basic Rich Text Editor"
            sling:redirect="{Boolean}false"
            sling:resourceType="granite/ui/components/foundation/page"
            sling:vanityOrder="{Long}1200"
            sling:vanityPath="/screens">
        <head jcr:primaryType="nt:unstructured">
            <contentchecker
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/admin/contentchecker"
                    allowed="[.*]"
                    alowEmpty="{Boolean}false"
                    path="${requestPathInfo.suffix}"
                    redirect="/screens.html"/>
            <viewport
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/admin/page/viewport"/>
            <meta
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/meta"
                    content="chrome=1"
                    name="X-UA-Compatible"/>
            <title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Harbor Text Component"
                    sling:resourceType="screens/ui/components/admin/page/title"/>
            <favicon
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/page/favicon"/>
            <clientlibs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/includeclientlibs"
                    categories="[granite.ui.foundation,granite.ui.foundation.admin,cq.gui.siteadmin.admin.pages,cq.screens.admin]"/>
        </head>
        <body
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/page/body">
            <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/endor/layouts/page"/>
            <rail
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/endor/navcolumns"
                    currentId="harbor-admin-documentation-components"
                    srcPath="cq/core/content/nav"/>
            <breadcrumbs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/gui/components/siteadmin/admin/endor/breadcrumbs"
                    baseUrl="/libs/harbor/admin/documentation.html"
                    contentPath="${empty param.item ? requestPathInfo.suffix : param.item}"
                    rootTitle="Harbor Documentation"/>
            <title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Harbor Text Component"
                    sling:resourceType="screens/ui/components/admin/endor/title"/>
            <header
                    jcr:primaryType="nt:unstructured"
                    srcPath="/mnt/overlay/cq/core/content/header"/>
            <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                        type="large"/>
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container"
                            jcr:title="Author Guide">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/heading"
                                    class="coral-Heading coral-Heading--1"
                                    level="2"
                                    text="Harbor Text Component"/>
                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="screens/ui/components/admin/text"
                                    line1="The Harbor Text component will allow the author to compose text within a Rich Text Editor. This will allow the author to style the text. The author can also choose to tag to classify the component."
                                    />
                            <author-instructions
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/heading"
                                    class="coral-Heading coral-Heading--1"
                                    level="3"
                                    text="Authoring Instructions"/>
                            <instructions
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="screens/ui/components/admin/text"
                                    line1="Switch to Design Mode and highlight the parsys that you wish to include a Text component.  Ensure that the Group 'Harbor' is checked as 'Allowed Components'.  Switch back into 'Edit' mode and drag a Text component into the parsys.  Click on the gear icon to launch the dialog window."
                                    />
                            <screenshot-title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/heading"
                                    class="coral-Heading coral-Heading--1"
                                    level="3"
                                    text="Author Dialog"/>
                            <screenshot-desc
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="screens/ui/components/admin/text"
                                    line1="Below is a screenshot of the Dialog window that appears when you click on the 'gear' icon.  You can also edit the text by clicking on the 'pencil' icon. Enter your text in the 'content' field.  Below is a list of the formatting options: "
                                    />
                            <content-options
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="harbor/admin/documentation/table">
                                <header1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        text="Formatting Option"
                                        />
                                <header2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        text="Description"
                                        />
                                <row1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                    <row1col1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="'A' button"
                                            />
                                    <row1col2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Bold, Italics, or Underline"
                                            />
                                </row1>
                                <row2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                    <row2col1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Alignment button"
                                            />
                                    <row2col2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Right Justify, Center, or Left Justify"
                                            />
                                </row2>
                                <row3
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                    <row3col1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="List button"
                                            />
                                    <row3col2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Bulleted List or Numbered List"
                                            />
                                </row3>
                                <row4
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                    <row4col1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Link button"
                                            />
                                    <row4col2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Add URL and text to be displayed"
                                            />
                                </row4>
                                <row5
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                    <row5col1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Unlink button"
                                            />
                                    <row5col2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/text"
                                            text="Remove Link"
                                            />
                                </row5>

                            </content-options>
                            <image
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="harbor/admin/documentation/image"
                                    width="300"
                                    fileReference="/libs/harbor/admin/documentation/components/text/text-dialog.png"/>

                        </items>
                    </tab1>
                </items>
            </content>
        </body>
    </jcr:content>
</jcr:root>
