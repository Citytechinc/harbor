<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[sling:VanityPath]"
        jcr:primaryType="nt:unstructured"
        jcr:title="Harbor Accordion Group Component"
        jcr:subtitle="Group: Harbor"
        jcr:description="Collapsable Accordion Group."
        sling:redirect="{Boolean}false"
        sling:resourceType="granite/ui/components/foundation/page"
        sling:vanityOrder="{Long}1200"
        sling:vanityPath="/screens">
        <head jcr:primaryType="nt:unstructured">
            <contentchecker
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/admin/contentchecker"
                allowed="[.*]"
                alowEmpty="{Boolean}false"
                path="${requestPathInfo.suffix}"
                redirect="/screens.html"/>
            <viewport
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/admin/page/viewport"/>
            <meta
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/meta"
                content="chrome=1"
                name="X-UA-Compatible"/>
            <title
                jcr:primaryType="nt:unstructured"
                jcr:title="Harbor Accordion Group Component"
                sling:resourceType="screens/ui/components/admin/page/title"/>
            <favicon
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/page/favicon"/>
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/includeclientlibs"
                categories="[granite.ui.foundation,granite.ui.foundation.admin,cq.gui.siteadmin.admin.pages,cq.screens.admin]"/>
        </head>
        <body
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/page/body">
            <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/endor/layouts/page"/>
            <rail
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/endor/navcolumns"
                currentId="harbor-admin-documentation-components"
                srcPath="cq/core/content/nav"/>
            <breadcrumbs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="harbor/admin/documentation/breadcrumb"
                    href="/apps/harbor/admin/documentation/components.html"
                    title="Harbor Components"/>
            <title
                jcr:primaryType="nt:unstructured"
                jcr:title="Harbor Accordion Group Component"
                sling:resourceType="screens/ui/components/admin/endor/title"/>
            <header
                jcr:primaryType="nt:unstructured"
                srcPath="/mnt/overlay/cq/core/content/header"/>
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType = "granite/ui/components/foundation/layouts/tabs"
                    type="large"/>
                    <items jcr:primaryType="nt:unstructured">
                        <tab1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType = "granite/ui/components/foundation/container"
                            jcr:title="Author Guide">
                            <items jcr:primaryType="nt:unstructured">
                                <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/heading"
                                    class="coral-Heading coral-Heading--1"
                                    level="1"
                                    text="Harbor Accordion Group Component"/>
                                <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="screens/ui/components/admin/text"
                                    line1="Presents a group of Accordion Items allowing for the ad-hoc addition of new items.  Each Accordion Item exposes a Paragraph System into which any number of components may be placed."
                                    line2="Group: Harbor"/>
                                <authorabilityTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--2"
                                        level="2"
                                        text="Accordion Group Authorability"/>
                                <addNewAccordionItemTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--3"
                                        level="3"
                                        text="Add New Accordion Item"/>
                                <addNewAccordionItemDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="screens/ui/components/admin/text"
                                        line1="New Accordion Items are added using the '+' button presented in the Accordion Group component's Toolbar."/>
                                <accordionGroupConfiguration
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--3"
                                        level="3"
                                        text="Accordion Group Component Configuration"/>
                                <dialog-options
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="harbor/admin/documentation/table">
                                    <header1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/heading"
                                            text="Dialog Field"/>
                                    <header2
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        text="Description"/>
                                    <row1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                        <row1col1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/text"
                                                text="Open First Item"/>
                                        <row1col2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/text"
                                                text="Indicates whether the first Accordion Item in the Accordion Group whould be opened by default."/>
                                    </row1>
                                </dialog-options>
                                <accordionItemAuthorabilityTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--2"
                                        level="2"
                                        text="Accordion Item Authorability"/>
                                <addContentToAccordionItems
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--3"
                                        level="3"
                                        text="Adding Content to Accordion Items"/>
                                <addContentToAccordionItemsDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="screens/ui/components/admin/text"
                                        line1="Each Accordion Item in an Accordion Group exposes its own Paragraph System to which any number of components may be added using normal authoring practices.  While authoring all Accordion Items will be opened to allow for modification.  When in Preview or Publish mode the Accordion Group will operate as a collection of collapsible elements."/>
                                <addContentToAccordionItems
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--3"
                                        level="3"
                                        text="Ordering Accordion Items"/>
                                <addContentToAccordionItemsDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="screens/ui/components/admin/text"
                                        line1="The order of established Accordion Items may be modified using the up and down arrows presented in the Toolbar of a given Accordion Item.  Pressing the up button for the first Accordion Item in an Accordion Group or the down button for the last Accordion Item in an Accordion Group will have no effect."/>

                                <accordionItemConfiguration
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/heading"
                                        class="coral-Heading coral-Heading--3"
                                        level="3"
                                        text="Accordion Item Configuration"/>
                                <accordionItemdialog-options
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="harbor/admin/documentation/table">
                                    <header1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/heading"
                                            text="Dialog Field"/>
                                    <header2
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/heading"
                                            text="Description"/>
                                    <row1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                        <row1col1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/text"
                                                text="Title"/>
                                        <row1col2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/text"
                                                text="Text title to present for the Accordion Item."/>
                                    </row1>
                                </accordionItemdialog-options>
                            </items>
                        </tab1>
                    </items>
            </content>
        </body>
    </jcr:content>
</jcr:root>
