<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Panel"
          title="Sitemap">
    <items jcr:primaryType="cq:WidgetCollection">
        <sitemap
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <hiddenFromRobots
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Do Not Index"
                    fieldDescription="Indicates that attempts should be made to hide the page from robots such as search engine crawl bots."
                    name="./icf:hiddenFromRobots"
                    type="checkbox"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <hideOption
                            jcr:primaryType="nt:unstructured"
                            text="Hide"
                            value="true"/>
                    </options>
                </hiddenFromRobots>
                <change_frequency
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Change Frequency"
                    name="./icf:changeFrequency"
                    type="select"
                    xtype="selection">

                    <options jcr:primaryType="cq:WidgetCollection">
                        <option-always jcr:primaryType="nt:unstructured"
                                       text="Always"
                                       value="always"/>

                        <option-hourly jcr:primaryType="nt:unstructured"
                                       text="Hourly"
                                       value="hourly"/>

                        <option-daily jcr:primaryType="nt:unstructured"
                                      text="Daily"
                                      value="daily"/>

                        <option-weekly jcr:primaryType="nt:unstructured"
                                       text="Weekly"
                                       value="weekly"/>

                        <option-monthly jcr:primaryType="nt:unstructured"
                                        text="Monthly"
                                        value="monthly"/>

                        <option-yearly jcr:primaryType="nt:unstructured"
                                       text="Yearly"
                                       value="yearly"/>

                        <option-never jcr:primaryType="nt:unstructured"
                                      text="Never"
                                      value="never"/>
                    </options>

                </change_frequency>

                <priority
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Priority"
                    name="./icf:priority"
                    type="select"
                    defaultValue="0.5"
                    xtype="selection">

                    <options jcr:primaryType="cq:WidgetCollection">
                        <option-10 jcr:primaryType="nt:unstructured"
                                   text="1.0"
                                   value="1.0"/>

                        <option-09 jcr:primaryType="nt:unstructured"
                                   text="0.9"
                                   value="0.9"/>

                        <option-08 jcr:primaryType="nt:unstructured"
                                   text="0.8"
                                   value="0.8"/>

                        <option-07 jcr:primaryType="nt:unstructured"
                                   text="0.7"
                                   value="0.7"/>

                        <option-06 jcr:primaryType="nt:unstructured"
                                   text="0.6"
                                   value="0.6"/>

                        <option-05 jcr:primaryType="nt:unstructured"
                                   text="0.5"
                                   value="0.5"/>

                        <option-04 jcr:primaryType="nt:unstructured"
                                   text="0.4"
                                   value="0.4"/>

                        <option-03 jcr:primaryType="nt:unstructured"
                                   text="0.3"
                                   value="0.3"/>

                        <option-02 jcr:primaryType="nt:unstructured"
                                   text="0.2"
                                   value="0.2"/>

                        <option-01 jcr:primaryType="nt:unstructured"
                                   text="0.1"
                                   value="0.1"/>

                        <option-00 jcr:primaryType="nt:unstructured"
                                   text="0.0"
                                   value="0.0"/>
                    </options>
                </priority>
            </items>
        </sitemap>
    </items>
</jcr:root>
